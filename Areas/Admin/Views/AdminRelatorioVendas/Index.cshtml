<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" asp-action="RelatorioVendasSimples">
            <fieldset>
                <div style="display: flex; align-items:center; justify-content: space-around; padding-top: 80px">
                <h2><b>Relatório de Pedidos por Data</b></h2>
                </div>
                <div class="form-group, col-md-6">
                    <label for="minDate" class="col-lg-6 control-label">Data Inicial</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group, col-md-6">
                    <label for="maxDate" class="col-lg-6 control-label">Data Final</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                    &nbsp;
                </div>
                <div class="form-group">
                    <div class="padding-top: 20px">
                        <button type="submit" class="btn btn-outline-primary" style="padding: 8px 25px">Filtrar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
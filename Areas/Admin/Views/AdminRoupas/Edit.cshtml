@model NetPants.Models.Roupa

@{
    ViewData["Title"] = "Edit";
}

<h1 style="display: flex; align-items:center; justify-content: space-around; padding-top: 80px">Editar Produto</h1>

<hr />
<div class="row">
    <div class="col-md-12 d-flex justify-content-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoupaId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
                &nbsp;
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
                &nbsp;
            </div>
            <div class="form-group">
                <label asp-for="DescricaoCurta" class="control-label"></label>
                <input asp-for="DescricaoCurta" class="form-control" />
                <span asp-validation-for="DescricaoCurta" class="text-danger"></span>
                &nbsp;
            </div>
            <div class="form-group">
                <label asp-for="DescricaoDetalhada" class="control-label"></label>
                <input asp-for="DescricaoDetalhada" class="form-control" />
                <span asp-validation-for="DescricaoDetalhada" class="text-danger"></span>
                &nbsp;
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
                &nbsp;
            </div>
            <div class="form-group">
                <label asp-for="ImagemUrl" class="control-label"></label>
                <input asp-for="ImagemUrl" class="form-control" />
                <span asp-validation-for="ImagemUrl" class="text-danger"></span>
                &nbsp;
            </div>
            <div class="form-group">
                <label asp-for="ImagemThumbnailUrl" class="control-label"></label>
                <input asp-for="ImagemThumbnailUrl" class="form-control" />
                <span asp-validation-for="ImagemThumbnailUrl" class="text-danger"></span>
                &nbsp;
            </div>


            <div class="row">
                <div class="form-group col-sm-6"><b>
                    <label class="control-label"></label>
                    <br />
                    <label class="form-check-label" style="padding-top: 10px">
                        <input class="form-check-input" asp-for="IsRoupaPromocao" /> @Html.DisplayNameFor(model => model.IsRoupaPromocao)
                    </label>
                    &nbsp;
                    </b>
                </div>

                <div class="form-group col-sm-6"><b>
                    <label class="control-label"></label>
                    <br />
                    <label class="form-check-label" style="padding-top: 10px">
                        <input class="form-check-input" asp-for="EmEstoque" /> @Html.DisplayNameFor(model => model.EmEstoque)
                    </label>
                    &nbsp;
                    </b>
                </div>

                <div class="form-group col-sm-12" style="padding-top: 20px">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                    &nbsp;
                </div>

            </div>
            <div class="form-group" style="display: flex; align-items:center; justify-content: space-around; padding-top: 20px">
                <input type="submit" value="Salvar" class="btn btn-outline-primary" style="padding: 8px 25px" />  
                <a class="text-decoration-none, btn btn-outline-info" style="padding: 8px 25px" asp-action="Index">Voltar</a>
            </div>

        </form>
    </div>
</div>



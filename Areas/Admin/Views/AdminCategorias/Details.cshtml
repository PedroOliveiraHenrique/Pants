@model NetPants.Models.Categoria

@{
    ViewData["Title"] = "Details";
}

<h1 style="display: flex; align-items:center; justify-content: space-around; padding-top: 80px">Detalhes</h1>

<div style="padding-top: 80px">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    &nbsp;
</div>
<div class="form-group" style="display: flex; align-items:center; justify-content: space-around; padding-top: 20px">
    <a class="text-decoration-none, btn btn-outline-primary" style="padding: 8px 25px" asp-action="Edit" asp-route-id="@Model?.CategoriaId">Editar</a>
    <a class="text-decoration-none, btn btn-outline-info" style="padding: 8px 25px" asp-action="Index">Voltar</a>
</div>

@model CarrinhoCompraViewModel

<div class="container">
    <div class="row" style="background-color:#CECECE; align-items: center; display: flex; justify-content: space-around; margin-top: 50px; padding-bottom: 50px">

        <div>
            <h3 style="display: flex; align-items:center; justify-content: space-around; padding: 70px 0">Sua Sacola</h3>
        </div>

        <table class="table table-bordered">
            <thead style="text-align:center;">
                <tr>
                    <th style="font-size: 22px">Produto(s) Escolhido(s)</th>
                    <th style="font-size: 22px">Quantidade</th>
                    <th style="font-size: 22px">Preço</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems)
                {
                    <tr>
                        <td class="text-center">@item.Roupa.DescricaoCurta</td>
                        <td class="text-center">@item.Quantidade</td>                       
                        <td class="text-center">@item.Roupa.Preco.ToString("c")</td>

                        <td class="text-center">
                            <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra"
                           asp-route-roupaId="@item.Roupa.RoupaId">
                                <img src="~/images/lixeira.png" />
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <td class="text-center" style="text-transform: uppercase;"><b>Valor Total: </b></td>

                    <td class="text-center">
                        @Model.CarrinhoCompraTotal.ToString("c")
                    </td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="form-group" style="display: flex; align-items:center; justify-content: space-around; padding-top: 50px">
                <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Continuar Comprando</a>
                <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
            </div>
        </div>

    </div>
</div>

